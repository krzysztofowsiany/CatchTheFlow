<Window x:Class="LongBreakView.UI.LongBreakDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Długa przerwa" Height="180" Width="400" >
    <StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                       Orientation="Vertical" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Label FontSize="20" VerticalAlignment="Center" Content="Czas długiej przerwy"></Label>
            <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Name="LongBreakTime"></TextBlock>
        </StackPanel>
        <Button Margin="70 0 70 10" Height="45" FontSize="20" VerticalAlignment="Center" Click="InterruptLongBreak">Przerwij długą przerwę</Button>
    </StackPanel>
</Window>
